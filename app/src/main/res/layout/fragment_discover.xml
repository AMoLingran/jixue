<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DiscoverFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_underline"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="开始下载更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_go" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pb_progressBar" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_go" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:max="100"/>
    <TextView
            android:text="未开始"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_speed"
            app:layout_constraintEnd_toEndOf="@+id/pb_progressBar"
            app:layout_constraintTop_toBottomOf="@+id/pb_progressBar" android:gravity="right"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_test" android:text="test"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/pb_progressBar"/>

</android.support.constraint.ConstraintLayout>